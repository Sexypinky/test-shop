<h2>Введите критерии поиска CC</h2>
<%= simple_form_for (@card), url: cards_result_path, :method => :post do |f| %>

  <h5>Страна</h5>
  <div class= "form_group">
    <%= f.text_field :country  %>
  </div>
  <h5>Цена до</h5>
  <div class= "form_group">
    <%= f.text_field :price  %>
  </div>
  <div class= "form_group">
    <%= f.input :full_cc, as: :boolean %>
  </div>
  <div class= "form_group">
    <%= f.input :not_full, as: :boolean  %>
  </div>
  <div class= "form_group">
    <%= f.input :with_vbv, as: :boolean  %>
  </div>
  <div class= "form_group">
    <%= f.input :without_vbv, as: :boolean  %>
  </div>

  <br>
  <div class= "form_group">
    <%= f.button :submit, 'Поиск', class: 'btn btn-primary' %>
    <%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%>
  </div>
<%end%>