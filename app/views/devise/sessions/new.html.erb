<h2>Вход</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    Jabber<br>
    <%= f.text_field :email, required: false, autofocus: true ,class: "form-control" %><br />
    Пароль<br>
    <%= f.password_field :password, required: false,class: "form-control" %><br />
    <%=   f.input :remember_me,class: "form-control", as: :boolean if devise_mapping.rememberable? %>
  </div>

    <div class="form-group">
      <%= f.submit 'Войти', class: 'btn btn-primary' %>
      <%= link_to 'Регистрация', :new_chel_registration, class: 'btn btn-outline-secondary' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
