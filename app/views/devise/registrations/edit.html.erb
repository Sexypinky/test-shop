<h2>Редактирование аккаунта <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
Jabber
  <div class="form-inputs">
    <%= f.text_field :email, required: true, autofocus: true %><br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Ожидание подтверждения <%= resource.unconfirmed_email %></p>
    <% end %>
    Введите новый пароль<br>
    <%= f.password_field :password, autocomplete: "off", required: false %><br>
    Введите пароль еще раз<br>
    <%= f.password_field :password_confirmation, required: false %><br>
    Введите текущий пароль<br>
    <%= f.password_field :current_password,  required: true %><br>
  </div>
  <br>
    <%= f.button :submit, "Обновить параметры аккаунта", class: 'btn btn-info'%>
<% end %>

<h3>Удаление аккаунта</h3>
<%= link_to "Удалить аккаунт", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "Вы уверены?" }, method: :delete %></p>

