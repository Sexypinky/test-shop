<h1>Вход</h1>
<%= simple_form_for (@bank) do |f| %>
  <h5>Номер счета</h5>
  <div class="form_group">
    <%= f.text_field :nomer %>
  </div>
  <h5> Пароль </h5>
  <div class="form_group">
    <%= f.text_field :password %>
  </div>
  <div class="form_group">
    <%= f.text_field :dengi %>
  </div>
  <div class="form_group">
    <%= f.button :submit, "Войти" ,class: 'btn btn-outline-secondary' %>
  </div>
<% end %>